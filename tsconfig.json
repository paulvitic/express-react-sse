{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "typings.d.ts",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.test.ts",
    "server/public"
  ]
}
